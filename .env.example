# Application Configuration
APP_PORT=5050
NODE_ENV=DEVELOPMENT

# Database Configuration
MONGO_CONNECTION_URI=mongodb://localhost:27017/nutri-ai-dev

# Security Configuration
HASH_ROUNDS=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-256-bits
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Food Database APIs Configuration
# USDA FoodData Central API (get free key at: https://fdc.nal.usda.gov/api-key-signup.html)
USDA_API_KEY=DEMO_KEY
USDA_API_URL=https://api.nal.usda.gov/fdc/v1

# Open Food Facts API (no API key required)
OPEN_FOOD_FACTS_API_URL=https://world.openfoodfacts.org/api/v2

# Food Database Cache Settings
FOOD_CACHE_TTL_SECONDS=604800
